<script>
const URL = "https://script.google.com/macros/s/AKfycbwiF3jedrRXq3PBA2Jji56WuAUoVsp_IaqLjwUz_52xcGHrQuVJgTEPWzrBgwGmy7YT/exec";

document.getElementById("form").addEventListener("submit", function(e){
  e.preventDefault();

  const phoneVal = document.getElementById("phone").value;

  if(!/^[6-9]\d{9}$/.test(phoneVal)){
    alert("‚ùå Invalid phone number");
    return;
  }

  fetch(URL,{
    method:"POST",
    body:JSON.stringify({
      name: document.getElementById("name").value,
      phone: phoneVal,
      age: document.getElementById("age").value,
      skill: document.getElementById("skill").value,
      tshirt: document.getElementById("tshirt").value
    })
  })
  .then(()=>{
    alert("‚úÖ Registration Successful!");
    document.getElementById("form").reset();
  })
  .catch(()=>{
    alert("‚ùå Submission failed");
  });
});
</script>

